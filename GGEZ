local player = game.Players.LocalPlayer
local mouse = player:GetMouse()
local button = script.Parent -- Assume this LocalScript is a child of the button

button.MouseButton1Click:Connect(function()
    local part = Instance.new("Part") -- Create a new part
    part.Size = Vector3.new(4, 1, 2) -- Set the size of the part
    part.Position = mouse.Hit.p + Vector3.new(0, 5, 0) -- Position it above where the mouse is pointing
    part.Anchored = true -- Make sure it doesn't fall
    part.Parent = game.Workspace -- Parent the part to the Workspace
end)
